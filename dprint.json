{
  "incremental": true,
  "indentWidth": 2,
  "lineWidth": 100,
  "typescript": {
    "quoteProps": "asNeeded",
    "arrowFunction.useParentheses": "force",
    "semiColons": "asi"
  },
  "markdown": {
    "textWrap": "always"
  },
  "includes": ["**.{js,json,jsonc,md,ts,tsx}"],
  "excludes": [".next", "node_modules"],
  "plugins": [
    "https://plugins.dprint.dev/json-0.19.1.wasm",
    "https://plugins.dprint.dev/markdown-0.16.3.wasm",
    "https://plugins.dprint.dev/typescript-0.88.7.wasm"
  ]
}
